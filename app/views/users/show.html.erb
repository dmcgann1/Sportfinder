<h3>My Profile</h3>
<img src="<%=@user.image %>">
<br>
Name: <%= @user.name %>
<br>
Email: <%= @user.email %>
<br>
Hometown: <%= @user.hometown %>
<br>
Current Location: <%= @user.location %>
<br>
<h3><%= @user.name %>'s Friends</h3>
<% @user.friends.each do |friend| %>
<img src="<%=friend.image %>">
<br>
<%= friend.name %>
<br>
<%= friend.email %>
<br>
<% end %>
<br>
<h3>All Sports</h3>
<ul>
  <% @sports.each do |sport| %>
    <li><%= link_to sport.name, user_sports_path(sport_id: sport), method: :post %></li>
  <% end %>
</ul>
<br>
<h3>My Favourite Sports</h3>
<ul>
  <% @user.sports.each do |sport| %>
    <li><%= sport.name %></li>
  <% end %>
</ul>

<br>
