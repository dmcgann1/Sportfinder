<table class="table table-hover">
  <thead>
  <h3>Search Results:</h3>
  </thead>
  <tbody>
    <% counter = 1 %>
    <% @facilities.each do |facility| %>
      <tr>
      <td>
      <h3><%= counter %> <%= link_to facility.name, facility_path(facility, reference: facility.reference), method: :post %></h3>
      <br>
      <% if facility.photos.present? %>
        <img class="search_images" src=<%= facility.photos[0].fetch_url(800) %>>
      <% else %>
        <img class="search_images" src="https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcR6DvWxavCtGlz3CHRmACBDlv_hCDKlEHC5RiCsAqxp6T1RBEzf1w">
      <% end %>
      <br>
      <%= facility.formatted_phone_number %>
      <br>
      <%= facility.formatted_address %>
      <br>
      Rating: <%= facility.rating %>
      <br>
      <%= facility.url %>
      <br>
      <% counter += 1 %>
      <br>
      (<%= facility.reviews.count %> reviews)
      <br>
      <br>
      </td>
      </tr>
  <% end %>

  </tbody>
</table>
